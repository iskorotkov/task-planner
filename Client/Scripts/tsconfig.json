{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "firebase",
      "firebaseui",
      "blazor__javascript-interop"
    ],
    "allowUmdGlobalAccess": true,
    "outDir": "../wwwroot/js",
    "sourceRoot": "./",
    "removeComments": true,
    "rootDir": "./",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strict": true
  },
  "exclude": [
    "node_modules"
  ]
}
