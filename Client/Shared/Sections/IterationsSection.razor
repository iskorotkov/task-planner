<TaskSection OnRemove="@RemoveSection">
    <div class="form-group">
        <InputNumber class="tp-input-number w-25 text-right" @bind-Value="@Iterations.Executed"/>
        <span>/</span>
        <InputNumber class="tp-input-number w-25 text-left" @bind-Value="@Iterations.Required"/>
    </div>

    <div class="form-group mb-0">
        <InputTimeSpan Value="@Iterations.TimePerIteration"/>
    </div>
</TaskSection>
