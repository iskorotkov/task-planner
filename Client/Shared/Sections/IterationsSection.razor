<TaskSection OnRemove="@RemoveSection">
    <div class="form-group">
        <label>Iterations executed</label>
        <InputNumber class="form-control h-auto px-1 py-0" @bind-Value="@Iterations.Executed"/>
    </div>

    <div class="form-group">
        <label>Iterations total</label>
        <InputNumber class="form-control h-auto px-1 py-0" @bind-Value="@Iterations.Required"/>
    </div>

    <div class="form-group">
        <label class="d-block">Time per iteration</label>
        <InputTimeSpan Value="@Iterations.TimePerIteration"/>
    </div>
</TaskSection>
