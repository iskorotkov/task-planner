<TaskSection OnRemove="@RemoveSection">
    <div class="form-group">
        <label class="d-block mb-0">Estimated time</label>
        <InputTimeSpan Value="@ExecutionTime.EstimatedTime"/>
    </div>

    <div class="form-group mb-0">
        <label class="d-block mb-0">Time spent</label>
        <InputTimeSpan Value="@ExecutionTime.TimeSpent"/>
    </div>
</TaskSection>
