<TaskSection OnRemove="@RemoveSection">
    <div class="form-group row no-gutters">
        <label class="d-block">Estimated time</label>
        <InputTimeSpan class="form-control d-inline" Value="@ExecutionTime.EstimatedTime"/>
    </div>

    <div class="form-group row no-gutters">
        <label class="d-block">Time spent</label>
        <InputTimeSpan class="form-control d-inline" Value="@ExecutionTime.TimeSpent"/>
    </div>
</TaskSection>
