<TaskSection OnRemove="@RemoveSection">
    <div class="form-group">
        <label>Soft deadline</label>
        <input type="datetime-local" class="form-control h-auto px-1 py-0" @bind="@Deadlines.SoftDeadline"/>
    </div>

    <div class="form-group">
        <label>Hard deadline</label>
        <input type="datetime-local" class="form-control h-auto px-1 py-0" @bind="@Deadlines.HardDeadline"/>
    </div>
</TaskSection>
