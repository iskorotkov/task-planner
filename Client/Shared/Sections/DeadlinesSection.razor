<TaskSection OnRemove="@RemoveSection">
    <div class="form-group">
        <label class="d-block mb-0">Soft deadline</label>
        <input type="datetime-local" class="form-control w-100 h-auto px-1 py-0 border" @bind="@Deadlines.SoftDeadline"/>
    </div>

    <div class="form-group mb-0">
        <label class="d-block mb-0">Hard deadline</label>
        <input type="datetime-local" class="form-control w-100 h-auto px-1 py-0 border" @bind="@Deadlines.HardDeadline"/>
    </div>
</TaskSection>
