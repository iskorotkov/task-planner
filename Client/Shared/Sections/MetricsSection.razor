<SectionCardTemplate Value="@Metrics" RemoveSection="@RemoveSection" @attributes="@AdditionalAttributes">
    <Header>
        Metrics
    </Header>

    <Content>
        <div class="row">
            <div class="form-group">
                <label>Importance</label>
                <InputNumber class="form-control" @bind-Value="@Metrics.Importance" />
            </div>

            <div class="form-group">
                <label>Complexity</label>
                <InputNumber class="form-control" @bind-Value="@Metrics.Complexity" />
            </div>
        </div>
    </Content>
</SectionCardTemplate>
