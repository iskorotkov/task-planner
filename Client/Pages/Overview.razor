@page "/overview"

@using TaskPlanner.Client.Shared.Tasks

<div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 p-0">
                <ul class="flex-column nav nav-tabs">
                    <li class="nav-item">
                        <a class="active nav-link" href="#">Overview</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Plan</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Settings</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col-12">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createTask">
                            <span class="oi oi-plus"></span>
                        </button>
                    </div>
                    
                    @foreach (var task in _tasks)
                    {
                        <div class="col-4">
                            <TaskCard Todo="@task" TaskSelected="@SetSelectedTask"/>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<CreateTask id="createTask"/>
